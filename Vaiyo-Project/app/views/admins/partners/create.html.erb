<div class="container pt-6">
  <%= render "shared/components/subtitle", subtitle: t("administrator.title"), search: false %>

  <div class="row">
    <div class="col-lg-3 mb-4">
      <%= render "admins/components/menu_buttons" %>
    </div>
    <div id="edit_user" class="col-lg-9">
      <%= content_tag(:div, id: 'partners', class: "setting-view card") do %>
        <div class="card-body p-6">
          <div class="card-title text-primary">
            <div class="form-group">
              <%= render "shared/components/subtitle", subtitle: t("partner.form.create"), search: false %>
            </div>
          </div>
          <%= form_for :partner, url: admin_partners_store_path, method: :post do |f|  %>
            <%= hidden_field_tag :setting, "account" %>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-6 mb-4">
                  <%= f.label :name, t("partner.table.name"), class: "form-label" %>
                  <div class="input-icon">
                    <%= f.text_field :name, class: "form-control", placeholder: t("partner.table.name") %>
                  </div>
                </div>

                <div class="col-sm-6 mb-4">
                  <%= f.label :status, t("partner.table.status"), class: "form-label" %>
                  <div class="input-icon">
                    <%= f.select :status, [["Yes", "1"], ["No", "0"]], {}, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6 mb-4">
                  <%= f.label :logo, t("partner.table.logo"), class: "form-label mt-5" %>
                  <div class="col-5 col-sm-2">
                    <span class="avatar avatar-xxl mr-5 mt-2 bg-primary">Logo</span>
                  </div>
                  <div class="col-7 col-sm-10 mt-5">
                    <%= f.file_field :logo %>
                  </div>
                </div>

                <div class="col-sm-6 mb-4">
                  <%= f.label :replacement_logo, t("partner.table.replacement_logo"), class: "form-label mt-5" %>
                  <div class="col-5 col-sm-2">
                    <span class="avatar avatar-xxl mr-5 mt-2 bg-primary">Logo</span>
                  </div>
                  <div class="col-7 col-sm-10 mt-5">
                    <%= f.file_field :replacement_logo %>
                  </div>
                </div>
              </div>

            <div class="card-footer pr-0">
              <%= link_to "Back", admin_partners_index_path, class: "btn btn-danger float-right ml-2" %>
              <%= f.submit t("partner.button.create"), class: "btn btn-primary float-right ml-2" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
