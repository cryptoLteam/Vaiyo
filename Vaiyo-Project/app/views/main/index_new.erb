            <div class="col-md-1 menu-wrapper column-5">
                <div class="title-wrapper">
                    <h4 class="title mb-0 fw-700">More</h4>
                    <div class="d-flex align-items-center">
                        <hr class="dotted-border border-1 rounded-circle">
                        <hr class="dotted-border border-2 rounded-circle">
                    </div>
                </div>
                <ul class="menu p-0 mb-0">
                    <li class="menu-item">Mail Support</li>
                    <li class="menu-item mt-4">
                        <%= link_to "Vaiyo BEP20", "https://bscscan.com/address/0xBA19f24dFCf7f795D90c0404d104680dB28BAC2b", target: "_blank" %>
                    </li>
                    <li class="menu-item mt-4">Github</li>
                </ul>
            </div>
        </div>
        <div class="row second-nav d-flex justify-content-between align-items-center">
            <div class="nav">
                <ul class="pl-0 mb-0">
                    <li class="nav-item d-inline-block fw-700 text-white">Product</li>
                    <li class="nav-item d-inline-block fw-700 text-white">Services</li>
                    <li class="nav-item d-inline-block fw-700 text-white">Company</li>
                    <li class="nav-item d-inline-block fw-700 text-white">More</li>
                </ul>
            </div>
            <div class="copyright">
                <p class="copyright-text mb-0 fw-700 text-white mr-0">&#174; VAIYO <%= Time.current.year %> - All Rights Reserved</p>
            </div>
